# This tmux statusbar config was created by tmuxline.vim
# on Wed, 09 Jun 2021

set -g status-justify "left"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=colour7,bg=colour10"
set -g status-right-style "none"
set -g pane-active-border-style "fg=colour10"
set -g status-style "none,bg=colour12"
set -g message-style "fg=colour7,bg=colour10"
set -g pane-border-style "fg=colour12"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "none"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=colour7,bg=colour12"
set -g status-left "#[fg=colour10,bg=colour7] #S #[fg=colour7,bg=colour12,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour10,bg=colour12,nobold,nounderscore,noitalics]#[fg=colour7,bg=colour10] %Y-%m-%d  %H:%M #[fg=colour7,bg=colour10,nobold,nounderscore,noitalics]"
setw -g window-status-format "#[fg=colour7,bg=colour12] #I #[fg=colour7,bg=colour12] #W "
setw -g window-status-current-format "#[fg=colour12,bg=colour10,nobold,nounderscore,noitalics]#[fg=colour7,bg=colour10] #I #[fg=colour7,bg=colour10] #W #[fg=colour10,bg=colour12,nobold,nounderscore,noitalics]"
